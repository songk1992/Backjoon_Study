#include <iostream>
using namespace std;

int main()
{
	int N, A;
	cin >> N;

	for (int i = 0; i < N; i++)
	{
		for (int j = 0; j < i+1; ++j)
		{
			cout << "*";
		}

		for (int j = 0; j < 2*(N-i-1); ++j)
		{
			cout << " ";
		}


		for (int j = 0; j < i + 1; ++j)
		{
			cout << "*";
		}
		cout<<endl;

	}
	
	A = N;
	for (int i = 0; i < N; i++)
	{
		for (int j = 0; j < (N - (i + 1)); ++j)
		{
			cout << "*";
		}

		for (int j = 0; j < 2 * (i+1); ++j)
		{
			cout << " ";
		}


		for (int j = 0; j < (N - (i + 1)); ++j)
		{
			cout << "*";
		}
		A--;
		if (A > 1) { cout << endl; }
	}

}
