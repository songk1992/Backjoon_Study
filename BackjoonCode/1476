#include <iostream>
using namespace std;

int E, S, M;

int main()
{
	cin >> E>>S>>M;
	//15 28 19

	if (E == S == M)
	{
		cout << E;
		return 0;
	}

	for (int i = 0; i < 600; i++)
	{
		for (int j = 0; j < 600; j++)
		{
			for (int k = 0; k < 600; k++)
			{
				
				if((i*15+E)==(j*28+S)&& (j * 28 + S) ==(k*19+M))
				{
					cout << i * 15 + E;
					return 0;
				}
			}
		}
	}
	/*
	yr = 15 * a + E
		= 28 * b + S
		= 19 * c + M
	
	*/


	
}
