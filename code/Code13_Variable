#include <iostream>
using namespace std;
int main()
{
int counter = 1;

counter++;
cout << "counter의 값 :" << counter << endl;
++counter;
cout << "counter의 값 :" << counter << endl;

counter--;
cout << "counter의 값 :" << counter << endl;
--counter;
cout << "counter의 값 :" << counter << endl;

return 0;
}


/*
a = ++value;
value를 1 증가한뒤
a 값에 value 값을 대입



a = value++;
a 값에 value 값을 대입한뒤
value를 1 을 증가

*/

/*

< 작다 
<= 작거나 같다
> 크다
>= 크거나 같다
== 같다
!= 같지 않다

*/
