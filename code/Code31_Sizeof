#include <iostream>

using namespace std;

void main()
{

	cout << "자료형의 크기 :" << endl;
	cout << "char 형 : " << sizeof(char) <<endl;
	cout << "short 형 : " << sizeof(short) << endl;
	cout << "int 형 : " << sizeof(int) << endl;
	cout << "long 형 : " << sizeof(long) << endl;
	cout << "float 형 : " << sizeof(float) << endl;
	cout << "double 형 : " << sizeof(double) << endl;

	long int x;
	float y;
	long double z;


	cout << endl <<  "변수의 크기 :" << endl;
	cout << "long int 변수 : " << sizeof(x) << endl;
	cout << "float 변수 : " << sizeof(y) << endl;
	cout << "long double 변수 : " << sizeof(z) << endl;

	cout << endl << "상수+ 연산결과 의 크기 :" << endl;
	cout << "'3' 의 자료형 : " << sizeof('3') << endl;
	cout << "3 의 자료형 : " << sizeof(3) << endl;
	cout << "3.0 의 자료형 : " << sizeof(3.0) << endl;
	cout << "3.0f 의 자료형 : " << sizeof(3.0f) << endl;
	cout << "3+4 의 자료형 : " << sizeof(3+4) << endl;
	cout << "3.0+4 의 자료형 : " << sizeof(3.0+4) << endl;

}
